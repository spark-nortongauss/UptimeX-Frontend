<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Use Next.js standalone server produced by production build -->
    <handlers>
      <add name="iisnode" path=".next/standalone/server.js" verb="*" modules="iisnode"/>
    </handlers>
    
    <rewrite>
      <rules>
        <!-- Route all requests to Next.js standalone server; it serves static assets (/_next/*, /public/*) itself -->
        <rule name="NextJSRewriteAll" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url=".next/standalone/server.js" />
        </rule>
      </rules>
    </rewrite>

    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="bin"/>
        </hiddenSegments>
      </requestFiltering>
    </security>

    <httpErrors existingResponse="PassThrough" />
    
    <!-- Enforce production mode for Node on Azure -->
    <iisnode watchedFiles="web.config;*.js" node_env="production"/>
  </system.webServer>
</configuration>